<% provide(:title, 'Lista de Usuários') %>
<h1>Lista de Usuários</h1>

<div class="pagination">
  <%= will_paginate @users, previous_label: 'Voltar', next_label: 'Avançar', renderer: BootstrapPagination::Rails %>
</div>


<ul style="list-style: none; padding:0">
  <% @users.each do |user| %>
    <li style="list-style: none; padding:10px 0">
      <div class="row">
        <div class="col-md-1">
          <%= gravatar_for user, size: 70 %>
        </div>
        <div class="col-md-4" >  
          <p><%= link_to user.name, user%></p>
          <p><% if current_user.admin? && !current_user?(user) %>
          <%= link_to "Remover Usuário", user , :class => 'btn btn-primary btn-xs', method: :delete,
                                      data: { confirm: "Você tem certeza que deseja remover este usuário??" } %></p>
        <% end %>
        </div>  	    
    </li>
  <% end %>
</ul>

<div class="pagination">
  <%= will_paginate @users, previous_label: 'Voltar', next_label: 'Avançar', renderer: BootstrapPagination::Rails %>
</div>