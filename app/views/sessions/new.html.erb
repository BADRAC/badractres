<% provide(:title, "Entrar") %>

<h1>Manutenção do Sistema</h1>
</br>

<div class="row">
	<div class="col-md-3">
	</div>
  	<div class="col-md-6">
		<%= form_for(:session, url: sessions_path) do |f| %>

      	<%= f.text_field :email, :placeholder=>"Email" %>
      	<%= f.password_field :password, :placeholder=>"Senha" %>
  </div>
</div>		
		<div class="row">
      <div class="col-md-4">
		  </div>
  		<div class="col-md-4">
      		<%= f.submit "Entrar", class: "btn btn-large btn-primary btn-block" %>
      </div>
    
    <% end %>
  </div>